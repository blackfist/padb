      <th>Outcome internal variety</th>
      <th>Outcome dept statement variety</th>
      <th>Outcome union statement variety</th>
      <th>Outcome dollars</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incidents.each do |incident| %>
      <tr>
        <td><%= incident.summary %></td>
        <td><%= incident.year %></td>
        <td><%= incident.month %></td>
        <td><%= incident.city %></td>
        <td><%= incident.state %></td>
        <td><%= incident.context %></td>
        <td><%= incident.abuse_force %></td>
        <td><%= incident.abuse_search %></td>
        <td><%= incident.abuse_misconduct %></td>
        <td><%= incident.abuse_intimidation %></td>
        <td><%= incident.abuse_sexual %></td>
        <td><%= incident.abuse_escalation %></td>
        <td><%= incident.abuse_animal %></td>
        <td><%= incident.force_variety %></td>
        <td><%= incident.search_variety %></td>
        <td><%= incident.misconduct_variety %></td>
        <td><%= incident.intimidation_variety %></td>
        <td><%= incident.sexual_variety %></td>
        <td><%= incident.escalation_variety %></td>
        <td><%= incident.victim_count %></td>
        <td><%= incident.victim_notes %></td>
        <td><%= incident.victim_race %></td>
        <td><%= incident.victim_age %></td>
        <td><%= incident.victim_gender %></td>
        <td><%= incident.officer_count %></td>
        <td><%= incident.officer_race %></td>
        <td><%= incident.officer_tenure %></td>
        <td><%= incident.officer_gender %></td>
        <td><%= incident.outcome_physical_variety %></td>
        <td><%= incident.outcome_legal_variety %></td>
        <td><%= incident.outcome_hr_variety %></td>
        <td><%= incident.outcome_internal_variety %></td>
        <td><%= incident.outcome_dept_statement_variety %></td>
        <td><%= incident.outcome_union_statement_variety %></td>
        <td><%= incident.outcome_dollars %></td>
        <td><%= link_to 'Show', incident %></td>
        <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
        <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

