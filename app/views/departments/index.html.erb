<p id="notice"><%= notice %></p>

<h1>Listing Departments</h1>

<%= render '/layouts/search' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Incident Count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |dept| %>
      <tr>
        <td><%= link_to dept.name, department_path(dept) %></td>
        <td><%= "#{dept.city}, #{dept.state}" %></td>
        <td><%= dept.incidents.count %></td>
        <td><%= link_to "Edit", edit_department_path(dept) %>
            <%= link_to "Destroy", dept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
